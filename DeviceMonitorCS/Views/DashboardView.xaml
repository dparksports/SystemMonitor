<UserControl x:Class="DeviceMonitorCS.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:DeviceMonitorCS.Controls"
             xmlns:converters="clr-namespace:DeviceMonitorCS.Converters"
             xmlns:vm="clr-namespace:DeviceMonitorCS.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:ActivityFeedConverter x:Key="ActivityFeedConverter"/>
        
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#CC1E293B"/>
            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Tier 1: Hero Shield -->
            <RowDefinition Height="*"/>    <!-- Tier 2: Activity Feed -->
            <RowDefinition Height="Auto"/> <!-- Tier 3: Expert Metrics (Collapsible) -->
        </Grid.RowDefinitions>

        <!-- Tier 1: Status Shield (Hero) -->
        <Border Grid.Row="0" Margin="0,0,0,20" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:StatusShieldControl Grid.Column="1" HorizontalAlignment="Center"/>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,220,0,0">
                    <Button Content="Scan Now" Command="{Binding Source={x:Static vm:SecurityStatusViewModel.Instance}, Path=ScanCommand}"
                            Width="120" Height="40" Background="#2563EB" Foreground="White" BorderThickness="0" FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    
                    <Button Content="Shield Up" Command="{Binding Source={x:Static vm:SecurityStatusViewModel.Instance}, Path=ShieldUpCommand}"
                            Width="120" Height="40" Background="#FFAE00" Foreground="Black" BorderThickness="0" FontSize="14" FontWeight="SemiBold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tier 2: Activity Feed -->
        <Border Grid.Row="1" Style="{StaticResource MetricCard}" Margin="5,0,5,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Recent Activity" Style="{StaticResource CardTitle}"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="TimelineList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Time -->
                                    <TextBlock Text="{Binding Time, StringFormat=t}" Foreground="#64748B" FontSize="12" Margin="0,0,15,0" VerticalAlignment="Center" Width="60"/>
                                    
                                    <!-- Activity (Humanized) -->
                                    <TextBlock Text="{Binding Title, Converter={StaticResource ActivityFeedConverter}}" Foreground="#E2E8F0" FontSize="14" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- Original Type (Debug/Expert tooltip) -->
                                    <Grid Grid.Column="2" Visibility="{Binding Source={x:Static vm:SecurityStatusViewModel.Instance}, Path=IsExpertMode, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="{Binding Title}" Foreground="#40FFFFFF" FontSize="10" FontStyle="Italic" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Tier 3: Advanced Metrics (Expert Mode Only) -->
        <Grid Grid.Row="2" Visibility="{Binding Source={x:Static vm:SecurityStatusViewModel.Instance}, Path=IsExpertMode, Converter={StaticResource BoolToVis}}">
             <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Usage -->
            <Border Grid.Column="0" Style="{StaticResource MetricCard}">
                <Grid>
                    <TextBlock Text="CPU Usage" Style="{StaticResource CardTitle}"/>
                    <Border Style="{StaticResource StatusBadge}" Background="#1500F0FF" BorderBrush="#3300F0FF" BorderThickness="1">
                        <TextBlock x:Name="CpuText" Text="0%" Foreground="#00F0FF" FontWeight="Bold"/>
                    </Border>
                    
                    <Grid Margin="0,40,0,25" ClipToBounds="False">
                        <StackPanel VerticalAlignment="Stretch">
                            <Border BorderBrush="#15FFFFFF" BorderThickness="0,0,0,1" Height="33"/>
                            <Border BorderBrush="#15FFFFFF" BorderThickness="0,0,0,1" Height="33"/>
                            <Border BorderBrush="#15FFFFFF" BorderThickness="0,0,0,1" Height="33"/>
                        </StackPanel>
                        <!-- Graph -->
                        <Path x:Name="CpuPath" Stroke="#00F0FF" StrokeThickness="2" Margin="5,0,0,0">
                            <Path.Fill>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#4000F0FF" Offset="0"/>
                                    <GradientStop Color="#0000F0FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Path.Fill>
                        </Path>
                    </Grid>
                </Grid>
            </Border>

            <!-- Memory Usage -->
            <Border Grid.Column="1" Style="{StaticResource MetricCard}">
                <Grid>
                    <TextBlock Text="Memory Usage" Style="{StaticResource CardTitle}"/>
                    <Border Style="{StaticResource StatusBadge}" Background="#15FFAE00" BorderBrush="#33FFAE00" BorderThickness="1">
                        <TextBlock x:Name="MemText" Text="0 GB" Foreground="#FFAE00" FontWeight="Bold"/>
                    </Border>
                    
                    <Grid Margin="0,40,0,25" ClipToBounds="False">
                        <StackPanel VerticalAlignment="Stretch">
                            <Border BorderBrush="#15FFFFFF" BorderThickness="0,0,0,1" Height="33"/>
                            <Border BorderBrush="#15FFFFFF" BorderThickness="0,0,0,1" Height="33"/>
                            <Border BorderBrush="#15FFFFFF" BorderThickness="0,0,0,1" Height="33"/>
                        </StackPanel>
                        <!-- Graph -->
                        <Path x:Name="MemPath" Stroke="#FFAE00" StrokeThickness="2" Margin="5,0,0,0">
                            <Path.Fill>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#40FFAE00" Offset="0"/>
                                    <GradientStop Color="#00FFAE00" Offset="1"/>
                                </LinearGradientBrush>
                            </Path.Fill>
                        </Path>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

