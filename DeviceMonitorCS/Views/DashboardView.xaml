<UserControl x:Class="DeviceMonitorCS.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#10FFFFFF"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Row: Metrics -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Usage -->
            <Border Grid.Column="0" Style="{StaticResource MetricCard}">
                <Grid>
                    <TextBlock Text="CPU Usage" Style="{StaticResource CardTitle}"/>
                    <Border Style="{StaticResource StatusBadge}" Background="#3300F0FF">
                        <TextBlock x:Name="CpuText" Text="0%" Foreground="#00F0FF" FontWeight="Bold"/>
                    </Border>
                    <!-- Placement for Graph -->
                    <Polyline x:Name="CpuGraph" Stroke="#00F0FF" StrokeThickness="2" Points="" Margin="0,30,0,0" VerticalAlignment="Bottom" Height="100" Stretch="Fill"/>
                </Grid>
            </Border>

            <!-- Memory Usage -->
            <Border Grid.Column="1" Style="{StaticResource MetricCard}">
                <Grid>
                    <TextBlock Text="Memory Usage" Style="{StaticResource CardTitle}"/>
                    <Border Style="{StaticResource StatusBadge}" Background="#33FFAE00">
                        <TextBlock x:Name="MemText" Text="0 GB" Foreground="#FFAE00" FontWeight="Bold"/>
                    </Border>
                    <!-- Placement for Graph -->
                    <Polygon x:Name="MemGraph" Fill="#33FFAE00" Points="" Margin="0,30,0,0" VerticalAlignment="Bottom" Height="100" Stretch="Fill" Stroke="#FFAE00" StrokeThickness="1"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Row: Timeline & Status -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Security Timeline -->
            <Border Grid.Column="0" Style="{StaticResource MetricCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Security Timeline" Style="{StaticResource CardTitle}"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <ItemsControl x:Name="TimelineList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Dot -->
                                        <Ellipse Width="8" Height="8" Fill="{Binding ColorBrush}" VerticalAlignment="Top" Margin="5,6,0,0"/>
                                        <!-- Line -->
                                        <Rectangle Width="1" Fill="#33FFFFFF" HorizontalAlignment="Center" Margin="0,14,0,-15" Grid.Column="0"/>
                                        
                                        <!-- Content -->
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Title}" Foreground="#E2E8F0" FontSize="13"/>
                                            <TextBlock Text="{Binding TimeDisplay}" Foreground="#64748B" FontSize="11"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Status Column -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Windows Defender -->
                <Border Grid.Row="0" Style="{StaticResource MetricCard}" Background="#20005500">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10">
                         <!-- Icon Placeholder -->
                         <Ellipse Width="40" Height="40" Fill="#00C853" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                         <TextBlock Text="Windows Defender:" Foreground="#E2E8F0" FontSize="14"/>
                         <TextBlock Text="Active" Foreground="#00E676" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Firewall -->
                <Border Grid.Row="1" Style="{StaticResource MetricCard}" Background="#20553300">
                     <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10">
                         <!-- Icon Placeholder -->
                         <Path Data="M10,0 L20,5 L20,15 C20,22 10,28 10,28 C10,28 0,22 0,15 L0,5 Z" Fill="Transparent" Stroke="#FFAB00" StrokeThickness="2" Width="30" Height="40" HorizontalAlignment="Left" Margin="5,0,0,10"/>
                         <TextBlock Text="Firewall:" Foreground="#E2E8F0" FontSize="14"/>
                         <TextBlock Text="Strict" Foreground="#FFAB00" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
