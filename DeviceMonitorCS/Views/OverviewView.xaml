<UserControl x:Class="DeviceMonitorCS.Views.OverviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    
    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="#10FFFFFF"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
        
        <!-- Card Header Style -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="MetricValue" TargetType="TextBlock">
             <Setter Property="FontSize" Value="24"/>
             <Setter Property="FontWeight" Value="Bold"/>
             <Setter Property="Foreground" Value="#00F0FF"/>
        </Style>


        
        <!-- List Item Style -->
        <Style x:Key="ListItem" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <!-- Status Indicator -->
        <Style x:Key="StatusDot" TargetType="Ellipse">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Status Cards -->
            <RowDefinition Height="*"/>     <!-- Main Grid 3x2 -->
        </Grid.RowDefinitions>

        <!-- TOP ROW: Status Cards (Keep existing 3-card layout) -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card 1: System Security -->
            <Border Grid.Column="0" Style="{StaticResource StatusCard}" Cursor="Hand" MouseLeftButtonDown="SecurityCard_Click">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="System Security" Foreground="#CCCCCC" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock x:Name="SecurityIcon" Text="&#xE8E8;" FontFamily="{StaticResource IconFont}" FontSize="48" 
                               Foreground="{StaticResource NeonGreenBrush}" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect x:Name="SecurityGlow" Color="{StaticResource NeonGreen}" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="StatusText" Text="Protected" Foreground="{StaticResource NeonGreenBrush}" 
                               FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 2: Network Shield -->
            <Border Grid.Column="1" Style="{StaticResource StatusCard}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Network Shield" Foreground="#CCCCCC" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock x:Name="NetworkIcon" Text="&#xE774;" FontFamily="{StaticResource IconFont}" FontSize="48" 
                               Foreground="{StaticResource NeonBlueBrush}" HorizontalAlignment="Center">
                         <TextBlock.Effect>
                            <DropShadowEffect x:Name="NetworkGlow" Color="{StaticResource NeonBlue}" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="NetworkText" Text="Active" Foreground="{StaticResource NeonBlueBrush}" 
                               FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 3: Automated Tasks -->
            <Border Grid.Column="2" Style="{StaticResource StatusCard}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Automated Tasks" Foreground="#CCCCCC" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock x:Name="TaskIcon" Text="&#xF167;" FontFamily="{StaticResource IconFont}" FontSize="48" 
                               Foreground="{StaticResource NeonAmberBrush}" HorizontalAlignment="Center">
                         <TextBlock.Effect>
                            <DropShadowEffect x:Name="TaskGlow" Color="{StaticResource NeonAmber}" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="TaskText" Text="Monitoring" Foreground="{StaticResource NeonAmberBrush}" 
                               FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- MAIN CONTENT: 3x2 Grid of Summary Cards -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card 1: Running Tasks -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource DashboardCard}" Margin="0,0,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Running Tasks" Style="{StaticResource CardHeader}"/>
                        <TextBlock x:Name="TasksCountText" Text="(0)" Foreground="#888" FontSize="14" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="TasksList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ListItem}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Description}" Foreground="White" TextTrimming="CharacterEllipsis" Grid.Column="0" ToolTip="{Binding TaskName}"/>
                                            <TextBlock Text="Running" Foreground="#4EC9B0" Grid.Column="1"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Card 2: Active Connections -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource DashboardCard}" Margin="10,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ”Œ" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Active Connections" Style="{StaticResource CardHeader}"/>
                        <TextBlock x:Name="ConnectionsCountText" Text="(0 processes)" Foreground="#888" FontSize="14" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ConnectionsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ListItem}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding ProcessName}" Foreground="White" TextTrimming="CharacterEllipsis" Grid.Column="0"/>
                                            <TextBlock Text="{Binding ConnectionCount}" Foreground="#888" Grid.Column="1"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Card 3: Device Management (Disconnected only) -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource DashboardCard}" Margin="0,10,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ–¥ï¸" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Device Management" Style="{StaticResource CardHeader}"/>
                        <TextBlock x:Name="DevicesCountText" Text="(0)" Foreground="#888" FontSize="14" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="DevicesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ListItem}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Width="8" Height="8" Fill="#FF6B6B" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding FriendlyName}" Foreground="White" Grid.Column="1" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Status}" Foreground="#FF6B6B" Grid.Column="2" FontSize="11"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Card 4: Cold Boots (Top 3) -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource DashboardCard}" Margin="10,10,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="â„ï¸" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Cold Boots" Style="{StaticResource CardHeader}"/>
                        <TextBlock x:Name="BootsCountText" Text="(top 3)" Foreground="#888" FontSize="14" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ShutdownsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ListItem}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding BootTime}" Foreground="#888" Grid.Column="0" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Status}" Foreground="White" Grid.Column="1"/>
                                            <TextBlock Text="{Binding Uptime}" Foreground="#888" Grid.Column="2" FontSize="11" Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Card 5: Firewall Rules -->
            <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource DashboardCard}" Margin="0,10,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ”¥" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Firewall Rules" Style="{StaticResource CardHeader}"/>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Inbound Rules -->
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Inbound" Foreground="#888" FontSize="12" Margin="0,0,0,5"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
                                <ItemsControl x:Name="InboundRulesList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource ListItem}" Padding="8,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Width="6" Height="6" Fill="{Binding StatusColor}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding GroupName}" Foreground="White" Grid.Column="1" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                        <!-- Outbound Rules -->
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Outbound" Foreground="#888" FontSize="12" Margin="0,0,0,5"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
                                <ItemsControl x:Name="OutboundRulesList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource ListItem}" Padding="8,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Ellipse Width="6" Height="6" Fill="{Binding StatusColor}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding GroupName}" Foreground="White" Grid.Column="1" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Card 6: Privacy Settings -->
            <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource DashboardCard}" Margin="10,10,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="ðŸ›¡ï¸" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Privacy Settings" Style="{StaticResource CardHeader}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <!-- VPN Service -->
                        <Border Style="{StaticResource ListItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="VpnDot" Style="{StaticResource StatusDot}" Fill="#888"/>
                                <TextBlock Text="VPN Service" Foreground="White" Grid.Column="1"/>
                                <TextBlock x:Name="VpnStatus" Text="Loading..." Foreground="#888" Grid.Column="2"/>
                            </Grid>
                        </Border>
                        <!-- WiFi Direct -->
                        <Border Style="{StaticResource ListItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="WifiDot" Style="{StaticResource StatusDot}" Fill="#888"/>
                                <TextBlock Text="WiFi Direct" Foreground="White" Grid.Column="1"/>
                                <TextBlock x:Name="WifiStatus" Text="Loading..." Foreground="#888" Grid.Column="2"/>
                            </Grid>
                        </Border>
                        <!-- Kernel Debug -->
                        <Border Style="{StaticResource ListItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="DebugDot" Style="{StaticResource StatusDot}" Fill="#888"/>
                                <TextBlock Text="Kernel Debug" Foreground="White" Grid.Column="1"/>
                                <TextBlock x:Name="DebugStatus" Text="Loading..." Foreground="#888" Grid.Column="2"/>
                            </Grid>
                        </Border>
                        <!-- Usage Data -->
                        <Border Style="{StaticResource ListItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="UsageDot" Style="{StaticResource StatusDot}" Fill="#888"/>
                                <TextBlock Text="Usage Data" Foreground="White" Grid.Column="1"/>
                                <TextBlock x:Name="UsageStatus" Text="Loading..." Foreground="#888" Grid.Column="2"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
