<UserControl x:Class="DeviceMonitorCS.Views.CommandPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceMonitorCS.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content 2x2 -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Command Panel" FontSize="24" FontWeight="Bold" Foreground="Cyan">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Cyan" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button x:Name="RefreshBtn" Content="Refresh" Margin="20,0,0,0" Padding="10,5" Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42" Click="RefreshBtn_Click"/>
            </StackPanel>
        </Grid>

        <!-- Command Grid (2x2) -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Quarter 1 (Top-Left): Microsoft VPN Hole -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Microsoft VPN Hole" Margin="0,0,10,10" BorderBrush="#3E3E42" Foreground="White" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- SSTP Service -->
                        <RowDefinition Height="*"/>    <!-- WAN Miniports -->
                    </Grid.RowDefinitions>

                    <!-- SSTP Service Control -->
                    <Border Grid.Row="0" Background="#252526" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="SSTP Service (sstpsvc)" FontWeight="SemiBold" Foreground="White"/>
                                    <TextBlock x:Name="SstpStatusText" Text="Loading..." Foreground="#AAAAAA" FontSize="11" Margin="0,2,0,0"/>
                                </StackPanel>
                                <Button x:Name="SstpToggleBtn" Grid.Column="1" Content="Toggle" Padding="15,5" Background="#007ACC" Foreground="White" BorderThickness="0" Click="SstpToggleBtn_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- WAN Miniports List -->
                    <DockPanel Grid.Row="1">
                        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,5">
                             <TextBlock Text="WAN Miniports" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,2"/>
                        </StackPanel>
                        <DataGrid x:Name="WanMiniportGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                                  Background="#252526" RowBackground="#252526" AlternatingRowBackground="#2D2D30" Foreground="White"
                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column" BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Grid>
            </GroupBox>

            <!-- Quarter 2 (Top-Right): Placeholder -->
            <GroupBox Grid.Row="0" Grid.Column="1" Header="Placeholder Q2" Margin="10,0,0,10" BorderBrush="#3E3E42" Foreground="White" Opacity="0.5">
                <TextBlock Text="Future Command Section" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#666666"/>
            </GroupBox>

            <!-- Quarter 3 (Bottom-Left): Placeholder -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Placeholder Q3" Margin="0,10,10,0" BorderBrush="#3E3E42" Foreground="White" Opacity="0.5">
                <TextBlock Text="Future Command Section" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#666666"/>
            </GroupBox>

            <!-- Quarter 4 (Bottom-Right): Placeholder -->
            <GroupBox Grid.Row="1" Grid.Column="1" Header="Placeholder Q4" Margin="10,10,0,0" BorderBrush="#3E3E42" Foreground="White" Opacity="0.5">
                <TextBlock Text="Future Command Section" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#666666"/>
            </GroupBox>

        </Grid>
    </Grid>
</UserControl>
