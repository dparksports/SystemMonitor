<Window x:Class="DeviceMonitorCS.Views.SecurityAuditWizardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DeviceMonitorCS.ViewModels"
        mc:Ignorable="d"
        Title="Security Audit" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    
    <Border Background="#1E1E1E" CornerRadius="15" BorderBrush="#3E3E42" BorderThickness="1" Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Color="Black" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Text="System Security Audit" Foreground="White" FontSize="24" FontWeight="Light" HorizontalAlignment="Center"/>
            
            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="0,30">
                
                <!-- Scanning State -->
                <StackPanel VerticalAlignment="Center" Visibility="{Binding IsScanning, Converter={StaticResource BoolToVis}}">
                    <ProgressBar Value="{Binding Progress}" Maximum="100" Height="4" Background="#333" Foreground="#2563EB" BorderThickness="0"/>
                    <TextBlock Text="{Binding StatusText}" Foreground="#CCC" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>
                
                <!-- Results State -->
                <StackPanel VerticalAlignment="Center" Visibility="{Binding IsComplete, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Audit Complete" Foreground="White" FontSize="18" HorizontalAlignment="Center"/>
                    
                    <Grid Margin="0,30">
                        <Ellipse Width="120" Height="120" Stroke="#FFAE00" StrokeThickness="4"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SecurityScore}" Foreground="#FFAE00" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Score" Foreground="#888" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Potential vulnerabilities detected in Network and Firewall configuration." 
                               Foreground="#BBB" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>

                <!-- Review State -->
                <Grid Visibility="{Binding IsReviewing, Converter={StaticResource BoolToVis}}" Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Proposed Security Fixes" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
                    
                    <Border Grid.Row="1" Background="#11FFFFFF" CornerRadius="5" Padding="10">
                        <ListBox ItemsSource="{Binding ProposedChanges}" Background="Transparent" BorderThickness="0" Foreground="#E0E0E0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" Foreground="#00FF00" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </Grid>
            
            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                
                <!-- Initial: View Changes (Review) -->
                <Button Content="View Changes" Command="{Binding ReviewIssuesCommand}" 
                        Width="200" Padding="10" Background="#FFAE00" Foreground="Black" BorderThickness="0" Margin="0,0,10,0"
                        Visibility="{Binding IsComplete, Converter={StaticResource BoolToVis}}">
                   <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Reviewing: Apply Fixes -->
                <Button Content="Apply Fixes" Command="{Binding FixIssuesCommand}" 
                        Width="200" Padding="10" Background="#2563EB" Foreground="White" BorderThickness="0" Margin="0,0,10,0"
                        Visibility="{Binding IsReviewing, Converter={StaticResource BoolToVis}}">
                   <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Content="Skip" Command="{Binding SkipCommand}" Background="Transparent" Foreground="#888" BorderThickness="0">
                     <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                     </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
