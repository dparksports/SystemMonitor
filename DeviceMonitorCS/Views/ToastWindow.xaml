<Window x:Class="DeviceMonitorCS.Views.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" Height="100" Width="350"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" Focusable="False"
        Loaded="Window_Loaded">

    <Border Background="#CC1E293B" BorderBrush="#33FFFFFF" BorderThickness="1" CornerRadius="8" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                 <Ellipse Width="32" Height="32" Fill="#33FFAE00"/>
                 <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#FFAE00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,10">
                <TextBlock x:Name="TitleText" Text="Title" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                <TextBlock x:Name="MessageText" Text="Message content goes here." Foreground="#B0B0B0" FontSize="12" TextWrapping="Wrap" MaxHeight="60"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
