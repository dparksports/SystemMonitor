<Window x:Class="DeviceMonitorCS.Views.FirmwareDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Firmware Table Details" Height="600" Width="800"
        Background="#1E1E1E" Foreground="White" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleText" Text="Table Content" FontSize="16" FontWeight="Bold" Margin="10" Foreground="#007ACC"/>

        <TextBox x:Name="ContentBox" Grid.Row="1" Margin="10" 
                 Background="#252526" Foreground="#D4D4D4" 
                 BorderBrush="#3E3E42" BorderThickness="1"
                 FontFamily="Consolas" FontSize="14"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 TextWrapping="No"/>

        <Button x:Name="CloseBtn" Grid.Row="2" Content="Close" Width="100" Height="30" Margin="10" 
                Click="CloseBtn_Click" Background="#3E3E42" Foreground="White" BorderThickness="0"/>
    </Grid>
</Window>
