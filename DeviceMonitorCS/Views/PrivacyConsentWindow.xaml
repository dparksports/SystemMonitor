                BY CLICKING "AGREE," YOU ACKNOWLEDGE THAT YOU HAVE READ THIS AGREEMENT AND AGREE TO BE BOUND BY ITS TERMS.
            </TextBlock>
        </ScrollViewer>

        <CheckBox x:Name="AgreeCheckBox" Grid.Row="2" Content="I have read and agree to the Privacy Policy and Terms of Service" 
                  Foreground="#DCDCDC" Margin="0,10,0,15" HorizontalAlignment="Left" FontSize="12"
                  Checked="AgreeCheckBox_CheckedChanged" Unchecked="AgreeCheckBox_CheckedChanged"/>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="QuitButton" Grid.Column="0" Content="Quit Application" Width="120" Height="36"
                    Click="QuitButton_Click" Background="Transparent" Foreground="#FF6B6B" BorderBrush="#FF6B6B" BorderThickness="1" Cursor="Hand"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="StartButton" Content="Agree" Width="180" Height="36" IsEnabled="False"
                        Click="StartButton_Click" Background="#61AFEF" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
