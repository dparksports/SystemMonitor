                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column" ColumnHeaderStyle="{StaticResource FirewallHeaderStyle}"
                                  BorderThickness="0" Margin="0,10,0,0">
                            <DataGrid.GroupStyle>
                                <GroupStyle ContainerStyle="{StaticResource DisabledGroupStyle}"/>
                            </DataGrid.GroupStyle>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Name" Width="2*">
