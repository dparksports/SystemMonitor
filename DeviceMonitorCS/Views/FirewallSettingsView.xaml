                    <!-- Nested: Disabled Groups -->
                    <TabItem Header="Disabled Groups" Style="{StaticResource NestedTabStyle}">
                        <DataGrid x:Name="OutboundDisabledGrid" ItemsSource="{Binding Source={StaticResource OutboundDisabledSource}}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                                  EnableRowVirtualization="True" ScrollViewer.CanContentScroll="True"
                                  Background="#252526" Foreground="White" RowBackground="#252526" AlternatingRowBackground="#2D2D30"
