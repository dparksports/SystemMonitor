<UserControl x:Class="DeviceMonitorCS.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Application Settings" FontSize="24" FontWeight="Light" Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="AppVersionText" Text="v0.0.0" Foreground="Cyan" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="20">
            
            <GroupBox Header="User Interface" Foreground="White" BorderBrush="#3E3E42" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Experience Level" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                    <CheckBox x:Name="ExpertModeToggle" Content="Expert Mode (Show advanced monitoring details)"
                              Foreground="#DCDCDC" Margin="0,0,0,5" Checked="ExpertModeToggle_Changed" Unchecked="ExpertModeToggle_Changed"/>
                    <TextBlock Text="Enables raw data grids, detailed logs, and advanced configuration options." 
                               Foreground="#808080" FontSize="11" Margin="20,0,0,10" FontStyle="Italic"/>
                               
                    <Button Content="Run Security Audit Wizard" Width="200" HorizontalAlignment="Left" Margin="0,10,0,0"
                            Padding="10,5" Background="#2563EB" Foreground="White" BorderThickness="0" Click="RunWizardBtn_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Security Enforcer" Foreground="White" BorderBrush="#3E3E42" Padding="15">
                <StackPanel>
                    <TextBlock Text="Scan Interval (ms)" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider x:Name="IntervalSlider" Minimum="1000" Maximum="10000" Width="300" 
                                TickFrequency="500" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                        <TextBlock x:Name="IntervalValueText" Text="2000 ms" Foreground="Cyan" 
                                   VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
                    </StackPanel>
                    <TextBlock Text="Lower values increase responsiveness but consume more CPU." 
                               Foreground="#808080" FontSize="11" Margin="0,5,0,0" FontStyle="Italic"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Startup Behavior" Foreground="White" BorderBrush="#3E3E42" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Run automatically at logon with highest privileges." Foreground="#CCCCCC" Margin="0,0,0,15"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="InstallTaskBtn" Content="Install Task" Width="150" HorizontalAlignment="Left" 
                                Padding="10,5" Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42" Click="InstallTaskBtn_Click" Margin="0,0,10,0"/>
                        <Button x:Name="UninstallTaskBtn" Content="Uninstall Task" Width="150" HorizontalAlignment="Left" 
                                Padding="10,5" Background="#3E2020" Foreground="#FF6B6B" BorderBrush="#5E3030" Click="UninstallTaskBtn_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Data Management" Foreground="White" BorderBrush="#3E3E42" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Privacy &amp; Analytics" FontWeight="Bold" Foreground="#61AFEF" Margin="0,0,0,10"/>
                    <CheckBox x:Name="AnalyticsToggle" Content="Share anonymous usage data to help improve AutoCommand"
                              Foreground="#DCDCDC" Margin="0,0,0,5" Checked="AnalyticsToggle_Changed" Unchecked="AnalyticsToggle_Changed"/>
                    <TextBlock x:Name="AnalyticsStatusText" Text="Status: Unknown" Foreground="Gray" FontSize="12" Margin="20,0,0,15"/>
                    
                    <TextBlock Text="Clear all monitored events and security logs from the dashboard views." Foreground="#CCCCCC" Margin="0,0,0,15"/>
                    <Button x:Name="ClearLogsBtn" Content="Clear System Logs" Width="200" HorizontalAlignment="Left" 
                            Padding="10,5" Background="#3E2020" Foreground="#FF6B6B" BorderBrush="#5E3030" Click="ClearLogsBtn_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Debug &amp; Testing" Foreground="White" BorderBrush="#3E3E42" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <CheckBox x:Name="RemediationDebugToggle" Content="Force Show Remediation Panel (Debug)"
                              Foreground="#FF4444" Margin="0,0,0,5" Checked="RemediationDebugToggle_Changed" Unchecked="RemediationDebugToggle_Changed"/>
                    <TextBlock Text="Enables the 'Repair Bootloader' options even if system status is Safe. Use with caution." 
                               Foreground="#808080" FontSize="11" Margin="20,0,0,0" FontStyle="Italic"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </Grid>
</UserControl>
