<UserControl x:Class="DeviceMonitorCS.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Status Cards -->
            <RowDefinition Height="*"/>    <!-- Security Grid -->
            <RowDefinition Height="15"/>    <!-- Spacing -->
            <RowDefinition Height="*"/>    <!-- Device Grid -->
        </Grid.RowDefinitions>

        <!-- TOP ROW: Status Cards -->
        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card 1: System Security -->
            <Border Grid.Column="0" Style="{StaticResource StatusCard}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="System Security" Foreground="#CCCCCC" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <!-- Shield Icon -->
                    <TextBlock x:Name="SecurityIcon" Text="&#xE8E8;" FontFamily="{StaticResource IconFont}" FontSize="48" 
                               Foreground="{StaticResource NeonGreenBrush}" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect x:Name="SecurityGlow" Color="{StaticResource NeonGreen}" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="StatusText" Text="Protected" Foreground="{StaticResource NeonGreenBrush}" 
                               FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 2: Network Shield -->
            <Border Grid.Column="1" Style="{StaticResource StatusCard}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Network Shield" Foreground="#CCCCCC" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <!-- Globe Icon -->
                    <TextBlock x:Name="NetworkIcon" Text="&#xE774;" FontFamily="{StaticResource IconFont}" FontSize="48" 
                               Foreground="{StaticResource NeonBlueBrush}" HorizontalAlignment="Center">
                         <TextBlock.Effect>
                            <DropShadowEffect x:Name="NetworkGlow" Color="{StaticResource NeonBlue}" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="NetworkText" Text="Active" Foreground="{StaticResource NeonBlueBrush}" 
                               FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 3: Automated Tasks -->
            <Border Grid.Column="2" Style="{StaticResource StatusCard}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Automated Tasks" Foreground="#CCCCCC" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <!-- Pulse/Activity Icon -->
                    <TextBlock x:Name="TaskIcon" Text="&#xF167;" FontFamily="{StaticResource IconFont}" FontSize="48" 
                               Foreground="{StaticResource NeonAmberBrush}" HorizontalAlignment="Center">
                         <TextBlock.Effect>
                            <DropShadowEffect x:Name="TaskGlow" Color="{StaticResource NeonAmber}" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="TaskText" Text="Scanning..." Foreground="{StaticResource NeonAmberBrush}" 
                               FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- MIDDLE ROW: Security Events -->
        <Border Grid.Row="1" Background="#252526" BorderBrush="#333" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="#2D2D30" Padding="10" CornerRadius="5,5,0,0" BorderThickness="0,0,0,1" BorderBrush="#333">
                    <TextBlock Text="Security Events" Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold"/>
                </Border>
                <DataGrid Grid.Row="1" x:Name="SecurityGrid" Margin="2">
                   <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ask AI about this" Click="AskAi_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="80"/>
                        <DataGridTextColumn Header="Source" Binding="{Binding Account}" Width="100"/>
                        <DataGridTextColumn Header="Event" Binding="{Binding Activity}" Width="200"/>
                        <DataGridTextColumn Header="Account Name" Binding="{Binding AccountName}" Width="120"/>
                        <DataGridTextColumn Header="Account Domain" Binding="{Binding AccountDomain}" Width="120"/>
                        <DataGridTextColumn Header="Logon ID" Binding="{Binding LogonId}" Width="100"/>
                        <DataGridTextColumn Header="Security ID" Binding="{Binding SecurityId}" Width="150"/>
                        
                        <!-- Privilege Checkboxes -->
                        <DataGridCheckBoxColumn Header="AssignToken" Binding="{Binding SeAssignPrimaryTokenPrivilege}" Width="80"/>
                        <DataGridCheckBoxColumn Header="TCB" Binding="{Binding SeTcbPrivilege}" Width="50"/>
                        <DataGridCheckBoxColumn Header="Security" Binding="{Binding SeSecurityPrivilege}" Width="60"/>
                        <DataGridCheckBoxColumn Header="TakeOwn" Binding="{Binding SeTakeOwnershipPrivilege}" Width="60"/>
                        <DataGridCheckBoxColumn Header="LoadDriver" Binding="{Binding SeLoadDriverPrivilege}" Width="70"/>
                        <DataGridCheckBoxColumn Header="Backup" Binding="{Binding SeBackupPrivilege}" Width="60"/>
                        <DataGridCheckBoxColumn Header="Restore" Binding="{Binding SeRestorePrivilege}" Width="60"/>
                        <DataGridCheckBoxColumn Header="Debug" Binding="{Binding SeDebugPrivilege}" Width="50"/>
                        <DataGridCheckBoxColumn Header="Audit" Binding="{Binding SeAuditPrivilege}" Width="50"/>
                        <DataGridCheckBoxColumn Header="SysEnv" Binding="{Binding SeSystemEnvironmentPrivilege}" Width="60"/>
                        <DataGridCheckBoxColumn Header="Impersonate" Binding="{Binding SeImpersonatePrivilege}" Width="80"/>

                        <DataGridTextColumn Header="Logon Type" Binding="{Binding LogonType}" Width="80"/>
                        <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="100"/>
                        <DataGridTextColumn Header="Workstation" Binding="{Binding WorkstationName}" Width="100"/>
                        <DataGridTextColumn Header="Source IP" Binding="{Binding IpAddress}" Width="100"/>
                        <DataGridTextColumn Header="Restricted Admin" Binding="{Binding RestrictedAdminMode}" Width="100"/>
                        <DataGridTextColumn Header="Cred Guard" Binding="{Binding RemoteCredentialGuard}" Width="80"/>
                        <DataGridTextColumn Header="Virtual Acc" Binding="{Binding VirtualAccount}" Width="80"/>
                        <DataGridTextColumn Header="Group Name" Binding="{Binding GroupName}" Width="100"/>
                        <DataGridTextColumn Header="Group Domain" Binding="{Binding GroupDomain}" Width="100"/>
                        <DataGridTextColumn Header="Group SID" Binding="{Binding GroupSecurityId}" Width="120"/>
                        <DataGridTextColumn Header="Details" Binding="{Binding Type}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- BOTTOM ROW: Device Events -->
        <Border Grid.Row="3" Background="#252526" BorderBrush="#333" BorderThickness="1" CornerRadius="5">
             <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="#2D2D30" Padding="10" CornerRadius="5,5,0,0" BorderThickness="0,0,0,1" BorderBrush="#333">
                    <TextBlock Text="Device Events" Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold"/>
                </Border>
                <DataGrid Grid.Row="1" x:Name="DeviceGrid" Margin="2">
                     <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Ask AI about this" Click="AskAi_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="80"/>
                        <DataGridTextColumn Header="Source" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Event" Binding="{Binding EventType}" Width="150"/>
                        <DataGridTextColumn Header="Details" Binding="{Binding Type}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
