<Window x:Class="DeviceMonitorCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DeviceMonitorCS"
        xmlns:views="clr-namespace:DeviceMonitorCS.Views"
        Title="Auto Command" Height="720" Width="1180" WindowStartupLocation="CenterScreen"
        Icon="app_icon.ico"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="-1" 
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F172A" Offset="0.0"/>
            <GradientStop Color="#1E293B" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="Background" Value="#11FFFFFF"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#08FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#33FFFFFF"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1E293B"/>
                        <Setter Property="Foreground" Value="#00F0FF"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#00F0FF"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Button Style -->
        <Style TargetType="Button" x:Key="NavButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="10,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <!-- Selection Indicator -->
                                <Border x:Name="indicator" HorizontalAlignment="Left" Width="4" Height="30" Background="#00F0FF" CornerRadius="2" Margin="-10,0,0,0" Visibility="Collapsed"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A00F0FF"/>
                                <Setter Property="Foreground" Value="#F8FAFC"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="border" Property="Background" Value="#221E293B"/>
                                <Setter Property="Foreground" Value="#00F0FF"/>
                                <Setter TargetName="indicator" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style (Hamburger) -->
        <Style TargetType="Button" x:Key="ToggleBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Group Header Style -->
        <Style TargetType="TextBlock" x:Key="GroupHeader">
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="15,20,0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Glass Panel Style -->
        <Style TargetType="Border" x:Key="GlassPanel">
            <Setter Property="Background" Value="#CC1E293B"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
        </Style>

        <!-- Window Control Button Style -->
        <Style TargetType="Button" x:Key="WindowControlBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="10" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1AFFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="CloseBtn" BasedOn="{StaticResource WindowControlBtn}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/> <!-- Custom Title Bar -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Integrated Title Bar UI -->
        <Grid Grid.Row="0" Background="Transparent">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                <Image Source="app_icon.ico" Width="16" Height="16" Margin="0,0,10,0"/>
                <TextBlock Text="Auto Command" Foreground="#94A3B8" FontSize="12" VerticalAlignment="Center" FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Content="&#xE921;" Style="{StaticResource WindowControlBtn}" Click="MinimizeBtn_Click"/>
                <Button Content="&#xE922;" Style="{StaticResource WindowControlBtn}" Click="MaximizeBtn_Click"/>
                <Button Content="&#xE8BB;" Style="{StaticResource CloseBtn}" Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar (Glass Effect) -->
            <Border x:Name="SidebarPane" Grid.Column="0" Width="120" HorizontalAlignment="Left" Background="#990F172A" BorderBrush="#1FFFFFFF" BorderThickness="0,0,1,0">
                <Grid Margin="0,10,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Toggle -->
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toggle Button (Hamburger) -->
                    <Button x:Name="HamburgerBtn" Grid.Row="0" Style="{StaticResource ToggleBtn}" HorizontalAlignment="Center" Margin="0,0,0,10" Click="HamburgerBtn_Click">
                        <TextBlock Text="&#xE700;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>

                    <!-- App Header -->
                    <StackPanel x:Name="SidebarHeader" Grid.Row="1" Margin="0,5,0,20" Visibility="Visible">
                        <!-- Simple Logo or Icon for Sidebar -->
                        <TextBlock Text="&#xF410;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#00F0FF" HorizontalAlignment="Center"/>
                        <TextBlock Text="AUTO COMMAND" FontSize="10" FontWeight="Black" Foreground="#00F0FF" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Navigation -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <Button x:Name="NavDashboardBtn" Style="{StaticResource NavButton}" Tag="Selected">
                                <StackPanel>
                                    <TextBlock Text="&#xEA8A;" FontFamily="Segoe MDL2 Assets" FontSize="28" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LabelDashboard" Text="Dashboard" Margin="0,5,0,0" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Visibility="Visible"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="NavSecurityBtn" Style="{StaticResource NavButton}">
                                <StackPanel>
                                    <TextBlock Text="&#xE727;" FontFamily="Segoe MDL2 Assets" FontSize="28" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LabelSecurity" Text="Security" Margin="0,5,0,0" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Visibility="Visible"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="NavDiagnosticsBtn" Style="{StaticResource NavButton}">
                                <StackPanel>
                                    <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" FontSize="28" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LabelDiagnostics" Text="Diagnostics" Margin="0,5,0,0" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" Visibility="Visible"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <StackPanel Grid.Row="3" Margin="5,20,5,0">
                        <Separator Background="#1FFFFFFF" Margin="0,0,0,10"/>
                        <Button x:Name="SettingsBtn" Style="{StaticResource NavButton}">
                            <StackPanel>
                                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="LabelSettings" Text="Settings" Margin="0,5,0,0" FontSize="12" HorizontalAlignment="Center" Visibility="Visible"/>
                            </StackPanel>
                        </Button>
                        
                        <StackPanel x:Name="SidebarFooter" Margin="0,15,0,0" Visibility="Visible">
                            <TextBlock x:Name="AppVersionText" Text="v3.7.7" Foreground="#475569" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="ACTIVE" Foreground="#00F0FF" FontSize="8" Margin="0,2,0,0" Opacity="0.7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Margin="0,10,20,20" Style="{StaticResource GlassPanel}">
                 <Grid>
                    <!-- Top-Left Radiant Glow -->
                    <Border CornerRadius="8" Opacity="0.6">
                        <Border.Background>
                            <RadialGradientBrush Center="0,0" GradientOrigin="0,0" RadiusX="0.8" RadiusY="0.8">
                                <GradientStop Color="#3500F0FF" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>
                    </Border>

                    <!-- Bottom-Right Radiant Glow -->
                    <Border CornerRadius="8" Opacity="0.5">
                        <Border.Background>
                            <RadialGradientBrush Center="1,1" GradientOrigin="1,1" RadiusX="0.7" RadiusY="0.7">
                                <GradientStop Color="#2500F0FF" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>
                    </Border>

                    <ContentControl x:Name="MainContentArea" Panel.ZIndex="1"/>
                 </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
