<Window x:Class="DeviceMonitorCS.HostedNetworkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hosted Network Manager" Height="400" Width="700" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button x:Name="StopHostedNetworkBtn" Content="Stop HostedNetwork" Margin="5"/>
                <Button x:Name="DisableHostedNetworkBtn" Content="Disable HostedNetwork" Margin="5"/>
                <Separator/>
                <Button x:Name="DisableWifiDirectBtn" Content="Disable Microsoft WiFi Direct Virtual Adapter" Margin="5"/>
                <Separator/>
                <Button x:Name="DisableAx210Btn" Content="Disable Intel WiFi 6E AX210" Margin="5"/>
                <Separator/>
                <Button x:Name="RefreshBtn" Content="Refresh" Margin="5" Width="60"/>
            </ToolBar>
        </ToolBarTray>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="All Network Adapters (Active, Disabled, Hidden)" Margin="5">
                <DataGrid x:Name="AdaptersGrid" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding InterfaceType}" Width="150"/>
                        <DataGridTextColumn Header="DeviceID" Binding="{Binding DeviceID}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="LightGray"/>

            <GroupBox Grid.Row="2" Header="Command Output" Margin="5">
                <TextBox x:Name="ConsoleOutput" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Background="Black" Foreground="LightGreen"/>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
