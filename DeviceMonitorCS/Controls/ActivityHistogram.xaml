<UserControl x:Class="DeviceMonitorCS.Controls.ActivityHistogram"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <Border Background="#252526" BorderBrush="#3E3E42" BorderThickness="1" CornerRadius="3">
            <Canvas x:Name="ChartCanvas" Background="Transparent" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    ClipToBounds="True"
                    SizeChanged="ChartCanvas_SizeChanged"
                    MouseLeftButtonUp="ChartCanvas_MouseLeftButtonUp"/>
        </Border>
        
        <!-- Hover Tooltip Text -->
        <TextBlock x:Name="TooltipText" Text="" Foreground="Cyan" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" IsHitTestVisible="False"/>
        
        <!-- Y-Axis Max Text -->
        <TextBlock x:Name="MaxCountText" Text="" Foreground="Gray" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,2,0,0"/>

        <!-- X-Axis Labels Container -->
        <Canvas x:Name="LabelsCanvas" IsHitTestVisible="False"/>
    </Grid>
</UserControl>
